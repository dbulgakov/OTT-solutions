<?xml version="1.0" encoding="utf-8"?>
<com.dbulgakov.entitycounterview.MatchParentViewGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/string_description_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_element_side"
        android:gravity="center_vertical"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:textSize="@dimen/normal_text_size"
        tools:text="@string/default_guest_type_string" />

    <Button
        android:id="@+id/decrease_value_button"
        android:background="@drawable/counter_remove_value_state"
        android:layout_width="@dimen/default_element_side"
        android:layout_height="@dimen/default_element_side" />

    <com.dbulgakov.entitycounterview.FlipNumberView
        android:id="@+id/current_count_view"
        android:layout_width="@dimen/default_element_side"
        android:gravity="center"
        android:layout_height="@dimen/default_element_side"
        android:textStyle="bold"
        android:textSize="@dimen/normal_text_size"
        tools:text="1"/>

    <Button
        android:id="@+id/increase_value_button"
        android:background="@drawable/counter_add_value_state"
        android:layout_width="@dimen/default_element_side"
        android:layout_height="@dimen/default_element_side" />

</com.dbulgakov.entitycounterview.MatchParentViewGroup>